@top Program { Statement* }

@precedence {
  call,
  equal @left
}

kw<term> { @specialize[@name={term}]<Identifier, term> }

Statement {
  FunctionDef |
  IfStatement |
  Assignment |
  ExpressionStatement
}

FunctionDef {
  kw<"fun"> Identifier "(" ")" Block
}

IfStatement {
  kw<"if"> "(" Expression ")" Block
}

Assignment {
  Identifier "=" Expression
}

ExpressionStatement {
  Expression
}

Block {
  "{" Statement* "}"
}

Expression {
  FunctionCall |
  BinaryExpression |
  Identifier |
  Number |
  "(" Expression ")"
}

BinaryExpression {
  Expression !equal "==" Expression
}

FunctionCall {
  Identifier !call "(" (Expression ("," Expression)*)? ")"
}

@tokens {
  Identifier { $[a-zA-Z_] $[a-zA-Z0-9_]* }
  Number { $[0-9]+ }
  space { $[ \t\n]+ }
  "="
  "=="
  ","
  lparen { "(" }
  rparen { ")" }
  lbrace { "{" }
  rbrace { "}" }
}

@skip { space }
